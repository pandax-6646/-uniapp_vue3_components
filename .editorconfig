# http://editorconfig.org
root = true

[*] # 表示所有文件适用
#缩进风格：空格
indent_style = space
#缩进大小2
indent_size = 2
#换行符lf
end_of_line = lf
#字符集utf-8
charset = utf-8
#是否删除行尾的空格
trim_trailing_whitespace = true
#是否在文件的最后插入一个空行
insert_final_newline = true

[*.md] # 表示仅 md 文件适用以下规则
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
